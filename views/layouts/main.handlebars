</head>

<body class="bg-body-primary">

  <button type="button" class="btn btn-outline-primary position-fixed top-0 end-0 m-2">
    <i class="fas fa-sun"></i>
  </button>
  {{{ body }}}

  <!-- Bootstrap JS and Popper.js (for Bootstrap's dropdowns, tooltips, and popovers) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- FontAwesome JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>

  <script>
    const button = document.querySelector('.btn')
    button.addEventListener("click", toggleTheme)

    function toggleTheme() {
      //document.body.classList.toggle('dark-theme');
      const htmlElement = document.querySelector('html');
      const currentTheme = htmlElement.getAttribute('data-bs-theme');

      // Toggle between light and dark themes
      const newTheme = currentTheme === 'light' ? 'dark' : 'light';

      // Update the data-bs-theme attribute
      htmlElement.setAttribute('data-bs-theme', newTheme);
    }
  </script>
</body>
</html>